@{
    ViewData["Title"] = "Home Page";
}
<main class="min-h-screen bg-gray-50">
  <div class="mx-auto max-w-3xl px-4 py-10 sm:py-16">
    <h1 class="text-3xl sm:text-4xl font-bold tracking-tight text-gray-900 text-center">Welcome</h1>

    <p class="mt-4 text-center text-gray-600">
      @ViewBag.Message
    </p>

    <p class="mt-6 text-center text-gray-600">
      Learn about <a class="text-blue-600 underline" href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.
    </p>

    <div class="mt-8 flex justify-center">
      <a asp-controller="Obstacle"
         asp-action="DataForm"
         class="inline-flex items-center rounded-lg border border-transparent bg-blue-600 px-4 py-2 text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">
        Register Obstacle
      </a>
    </div>
  </div>
</main>
